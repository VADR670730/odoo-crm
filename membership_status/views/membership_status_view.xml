<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record model="ir.ui.view" id="membership_view_partner_form">
    <field name="name">Membership extension</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form" />
    <field name="arch" type="xml">
    <sheet position="before">
          <header>
          <field name="membership_status" widget="statusbar" statusbar_visible="stage 1,stage 2,stage 3,stage 4,stage 5"/>
        </header>
    </sheet>
    </field>
  </record>
  <record model="ir.ui.view" id="view_res_partner_filter">
    <field name="name">res.partner.select.membership</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_res_partner_filter" />
    <field name="arch" type="xml">
      <field name="parent_id" positon="after">
        <field name="membership_status" />
      </field>
      <filter name="group_country" position="after">
        <filter name="group_membership_status" string="Membership Status" context="{'group_by': 'membership_status'}"/>
      </filter>
    </field>
  </record>
</odoo>